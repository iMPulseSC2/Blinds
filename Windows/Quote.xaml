                        <TextBox x:Name="TxtboxQuantity11" Grid.Column="0" Grid.Row="11" Margin="9,5,9,0" Width="42" TextAlignment="Center" HorizontalAlignment="Center" MaxLength="4" PreviewTextInput="NumberValidationTextBoxQuantity"/>
